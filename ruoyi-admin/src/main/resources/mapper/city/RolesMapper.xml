<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.city.mapper.RolesMapper">
    
    <resultMap type="Roles" id="RolesResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="displayName"    column="display_name"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectRolesVo">
        select id, name, display_name, status, create_time, update_time from roles
    </sql>

    <select id="selectRolesList" parameterType="Roles" resultMap="RolesResult">
        <include refid="selectRolesVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="displayName != null  and displayName != ''"> and display_name like concat('%', #{displayName}, '%')</if>
        </where>
    </select>
    
    <select id="selectRolesById" parameterType="Long" resultMap="RolesResult">
        <include refid="selectRolesVo"/>
        where id = #{id}
    </select>

    <insert id="insertRoles" parameterType="Roles" useGeneratedKeys="true" keyProperty="id">
        insert into roles
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="displayName != null and displayName != ''">display_name,</if>
            <if test="status != null">status,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="displayName != null and displayName != ''">#{displayName},</if>
            <if test="status != null">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateRoles" parameterType="Roles">
        update roles
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="displayName != null and displayName != ''">display_name = #{displayName},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteRolesById" parameterType="Long">
        delete from roles where id = #{id}
    </delete>

    <delete id="deleteRolesByIds" parameterType="String">
        delete from roles where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>