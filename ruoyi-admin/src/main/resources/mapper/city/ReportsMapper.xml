<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.city.mapper.ReportsMapper">
    
    <resultMap type="Reports" id="ReportsResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="typeId"    column="type_id"    />
        <result property="title"    column="title"    />
        <result property="description"    column="description"    />
        <result property="address"    column="address"    />
        <result property="latitude"    column="latitude"    />
        <result property="longitude"    column="longitude"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />

        <result property="assignedTo" column="assigned_to"/>
        <result property="assignedBy" column="assigned_by"/>
        <result property="assignedTime" column="assigned_time"/>
    </resultMap>

    <resultMap id="ReportsWithImagesResult" type="Reports" extends="ReportsResult">
        <collection
                property="reportImagesList"
                ofType="ReportImages"
                column="id"
        select="selectImagesByReportId"/>
    </resultMap>

    <resultMap id="ReportsReportImagesResult" type="Reports" extends="ReportsResult">
        <collection property="reportImagesList" ofType="ReportImages" column="id" select="selectReportImagesList" />
    </resultMap>

    <resultMap type="ReportImages" id="ReportImagesResult">
        <result property="id"    column="id"    />
        <result property="reportId"    column="report_id"    />
        <result property="imageUrl"    column="image_url"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectReportsVo">
        select id, user_id, type_id, title, description, address, latitude, longitude, status, create_time, update_time from reports
    </sql>

    <select id="selectReportsList" parameterType="Reports" resultMap="ReportsWithImagesResult">
        <include refid="selectReportsVo"/>
        <where>  
            <if test="title != null  and title != ''"> and title like concat('%', #{title}, '%')</if>
            <if test="description != null  and description != ''"> and description like concat('%', #{description}, '%')</if>
            <if test="address != null  and address != ''"> and address like concat('%', #{address}, '%')</if>
            <if test="userId != null "> and user_id = #{userId}</if>
        </where>
    </select>

    <select id="selectImagesByReportId" resultMap="ReportImagesResult">
        SELECT id, report_id, image_url, create_time
        FROM report_images
        WHERE report_id = #{id}
    </select>
    
    <select id="selectReportsById" parameterType="Long" resultMap="ReportsReportImagesResult">
        select id, user_id, type_id, title, description, address, latitude, longitude, status, create_time, update_time
        from reports
        where id = #{id}
    </select>

    <select id="selectReportImagesList" resultMap="ReportImagesResult">
        select id, report_id, image_url, create_time
        from report_images
        where report_id = #{report_id}
    </select>

    <select id="selectReportsListByUserId" parameterType="Long" resultMap="ReportsWithImagesResult">
        <include refid="selectReportsVo"/>
        where user_id = #{userId}
        order by create_time desc
    </select>

    <insert id="insertReports" parameterType="Reports" useGeneratedKeys="true" keyProperty="id">
        insert into reports
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="typeId != null">type_id,</if>
            <if test="title != null and title != ''">title,</if>
            <if test="description != null">description,</if>
            <if test="address != null and address != ''">address,</if>
            <if test="latitude != null">latitude,</if>
            <if test="longitude != null">longitude,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="typeId != null">#{typeId},</if>
            <if test="title != null and title != ''">#{title},</if>
            <if test="description != null">#{description},</if>
            <if test="address != null and address != ''">#{address},</if>
            <if test="latitude != null">#{latitude},</if>
            <if test="longitude != null">#{longitude},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateReports" parameterType="Reports">
        update reports
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="typeId != null">type_id = #{typeId},</if>
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="description != null">description = #{description},</if>
            <if test="address != null and address != ''">address = #{address},</if>
            <if test="latitude != null">latitude = #{latitude},</if>
            <if test="longitude != null">longitude = #{longitude},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>

            <if test="assignedTo != null">assigned_to = #{assignedTo},</if>
            <if test="assignedBy != null">assigned_by = #{assignedBy},</if>
            <if test="assignedTime != null">assigned_time = #{assignedTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteReportsById" parameterType="Long">
        delete from reports where id = #{id}
    </delete>

    <delete id="deleteReportsByIds" parameterType="String">
        delete from reports where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
    <delete id="deleteReportImagesByReportIds" parameterType="String">
        delete from report_images where report_id in 
        <foreach item="reportId" collection="array" open="(" separator="," close=")">
            #{reportId}
        </foreach>
    </delete>

    <delete id="deleteReportImagesByReportId" parameterType="Long">
        delete from report_images where report_id = #{reportId}
    </delete>

    <insert id="batchReportImages">
        insert into report_images( id, report_id, image_url) values
        <foreach item="item" index="index" collection="list" separator=",">
            ( #{item.id}, #{item.reportId}, #{item.imageUrl})
        </foreach>
    </insert>
</mapper>